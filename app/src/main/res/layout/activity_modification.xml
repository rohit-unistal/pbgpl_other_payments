<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_arrow_back_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Modification Request"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imglogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_logout" />
    </RelativeLayout>

    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/requesttv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Modify Request No: "
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_modify"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.45"

                    android:textSize="18sp"
                    android:textColor="@android:color/black"

                    android:background="@android:drawable/editbox_background"

                    android:gravity="right" />

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.25"

                    android:text="Search"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/bpnotv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="BP No:"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_bpno"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/nametv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Name:"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/addresstv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Address:"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="0.7"

                    android:textSize="18sp"
                    android:textColor="@android:color/black"

                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/servicetv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Service:"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_service"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"

                    android:textSize="18sp"
                    android:textColor="@android:color/black"

                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/serviceamttv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Service Charges:"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_service_amt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"

                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linlaymaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Material Charges"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_material_amt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"

                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Total Charges"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_total_charge"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"

                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rbtgenerate"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:text="Generate New Bill"/>
                <RadioButton
                    android:id="@+id/rbtnext"
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:text="Next gas Bill"/>
            </RadioGroup>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:gravity="left"


                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnpay"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:textSize="18sp"

                    android:text="Submit"
                    android:focusable="false"
                    android:gravity="center" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
