<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Other Payments"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imglogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
                android:src="@drawable/ic_logout" />
    </RelativeLayout>

    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:id="@+id/bpnotv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="BP No:"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_bpno"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.40"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"

                    android:background="@android:drawable/editbox_background"

                    android:gravity="right" />

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.30"
                    android:text="Search"
                    android:textSize="14sp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/nametv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Name:"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/phonetv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Phone:"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"
                    android:maxLines="1"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"

                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/addresstv"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Address:"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="0.7"

                    android:textSize="18sp"
                    android:textColor="@android:color/black"

                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tvExtraPipe"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Extra Pipe"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_quantity"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"

                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tvCharges"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Charges"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_charges"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"

                    android:textSize="18sp"

                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/tvPaymentmode"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="left"

                    android:text="Pay Mode"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spin_pay_mode"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.7"

                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:background="@android:drawable/editbox_background"
                    android:focusable="false"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"

                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:gravity="left"


                    android:textColor="@android:color/black"
                    android:layout_marginLeft="2sp"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnpay"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:textColor="@color/white"
                    android:textSize="18sp"

                    android:text="Submit"
                    android:focusable="false"
                    android:gravity="center" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
